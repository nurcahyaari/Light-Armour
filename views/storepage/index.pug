doctype html
html(lang='en')
  head
    title Light Armor
    include default/head.pug
  body
    - let productscelana = new Array();
    - let productsbaju = new Array();
    - let productsjacket = new Array();
    span#main
      // start of navigation bar
      include default/nav.pug
      // end of navigation bar
      #content.container
        .row
          .cart
            a(href='/cart')
              i.fa.fa-shopping-cart.cart-logo
                if inCart
                  span.cart-amount= MuchOnCart
                else
                  span.cart-amount
          .headline.slide
            div(style='display:block')
              img(src='images/headline2.jpg', alt='')
            div
              img(src='images/headline1.jpg', alt='')
            div
              img(src='images/headline3.jpg', alt='')
        .row
          .col-md-12.col-sm-12.col-xs-12
            .row
              .col-md-4.col-md-offset-1
                .textProduct-Heading
                  b T-SHIRTS
            .container
              .row
                -for(var j = 0; j < row.length; j++)
                  if row[j].jenis == "baju" && row[j].id_barang !== row[j+1].id_barang
                    //- - i++;
                    - productsbaju.push(row[j]);
                each products in productsbaju.slice(0, 4)
                  a(href='/product/search/' + products.id_barang)
                    .col-md-2.col-sm-2.col-xs-5.product-wrapper
                      .row
                        if products.gambar
                          img.img-responsive.center-block(src='/images/' + products.gambar, alt='', width='256px')
                        else
                          img.img-responsive.center-block(src='/images/image-not-found.gif', alt='', width='256px')
                      .row.center-block.product-desc
                        b= products.namabarang
                      .row.center-block= products.harga
            .row
              .col-md-5.col-sm-4.col-xs-2
              .col-md-2.col-sm-4.col-xs-8
                a(href='/show/tshirt')
                  b.center-block.smore-btn See More
              .col-md-5.col-sm-5.col-xs-2
          .col-md-12.col-sm-12.col-xs-12
            .row
              .col-md-4.col-md-offset-1
                .textProduct-Heading
                  b JEANS
            .container
              .row
                -for(var j = 0; j < row.length; j++)
                  if row[j].jenis == "jacket"
                    - i++;
                    - productsjacket.push(row[j]);
                each products in productsjacket.slice(0, 4)
                  a(href='/product/search/' + products.id_barang)
                    .col-md-2.col-sm-2.col-xs-5.product-wrapper
                      .row
                        if products.gambar
                          img.img-responsive.center-block(src='/images/' + products.gambar, alt='', width='128px')
                        else
                          img.img-responsive.center-block(src='/images/image-not-found.gif', alt='', width='128px')
                      .row.center-block.product-desc
                        b= products.namabarang
                      .row.center-block= products.harga
              .row
                .col-md-5.col-sm-4.col-xs-2
                .col-md-2.col-sm-4.col-xs-8
                  a(href='/show/jacket')
                    b.center-block.smore-btn See More
              .col-md-5.col-sm-4.col-xs-2
          .col-md-12.col-sm-12.col-xs-12
            .row
              .col-md-4.col-md-offset-1
                .textProduct-Heading
                  b JEANS
            .container
              .row
                -for(var j = 0; j < row.length; j++)
                  if row[j].jenis == "celana"
                    - i++;
                    - productscelana.push(row[j]);
                each products in productscelana.slice(0, 4)
                  a(href='/product/search/' + products.id_barang)
                    .col-md-2.col-sm-2.col-xs-5.product-wrapper
                      .row
                        if products.gambar
                          img.img-responsive.center-block(src='/images/' + products.gambar, alt='', width='128px')
                        else
                          img.img-responsive.center-block(src='/images/image-not-found.gif', alt='', width='128px')
                      .row.center-block.product-desc
                        b= products.namabarang
                      .row.center-block= products.harga
              .row
                .col-md-5.col-sm-4.col-xs-2
                .col-md-2.col-sm-4.col-xs-8
                  a(href='/show/jeans')
                    b.center-block.smore-btn See More
                .col-md-5.col-sm-5.col-xs-2
      // start of footer
      include default/footer.pug
      // end of footer
    include default/side.pug
  script(src='/javascripts/script.js')